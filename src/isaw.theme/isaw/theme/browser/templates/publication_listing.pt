<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="isaw.theme">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core"
                    tal:define="kssClassesView context/@@kss_field_decorator_view;
                                getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                templateId template/getId;
                                items view/listings">
  <a tal:repeat="item view/listings"
     tal:attributes="href item/getURL">
    <div class="PublicationCard"
         tal:define="card item/getObject">
      <div class="PublicationCardImage"
           tal:define="image_view card/@@images;
                       image_preview image_view/image|nothing">
        <span tal:condition="image_preview"
              tal:replace="structure image_preview">
        </span>
      </div>
      <div class="PublicationCardBody">
        <div>
          <h3 tal:content="item/Title"></h3>
          <p><b tal:content="card/tag_line"></b></p>
          <span tal:content="structure card/formatted_citation"></span>
        </div>
      </div>
    </div>
  </a>
</metal:block>
</metal:content-core>

</body>
</html>
