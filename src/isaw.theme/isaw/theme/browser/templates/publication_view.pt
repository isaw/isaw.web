<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="kcrw.site">
<body>
<metal:supress-desc fill-slot="content-description"></metal:supress-desc>
  <metal:core fill-slot="content-core">
	<tal:defines define="image_view context/@@images;
                         image_preview image_view/image|nothing;">
    <div class="PublicationImage" style="float:left; margin-right: 20px">
       <span tal:condition="image_preview"
       tal:content="structure image_preview">
       </span>
       <br />
       <strong tal:content="context/image_caption"></strong>
    </div>

    <div class="PublicationBody">
    <h3 class="Tagline"
         tal:condition="context/tag_line|nothing"
         tal:content="context/tag_line">
         Tagline
    </h3>
    <div class="PublicationInfo" style="margin-bottom: 15px;">
        <span tal:condition="view/authors">
          <strong>by:</strong> <span tal:content="structure view/authors" />
          <br />
        </span>
        <span tal:condition="view/editors">
          <strong>edited by:</strong> <span tal:content="structure view/editors" />
          <br />
        </span>
        <span tal:condition="view/contributors">
          <strong>contributors:</strong> <span tal:content="structure view/contributors" />
          <br />
        </span>
        <span tal:condition="context/parent_title">
          <span tal:content="context/parent_title" />
        </span>
        <span tal:condition="context/volume">
          <span tal:content="context/volume" />,
        </span>
        <span tal:condition="context/date_of_publication">
          <span tal:content="context/date_of_publication" />:
        </span>
        <span tal:condition="context/range">
          <span tal:content="context/range" />
        </span>
        <br tal:condition="python:context.parent_title or context.volume or context.date_of_publication or context.range" />
        <span tal:condition="python:context.publisher">
          <a tal:attributes="href context/publisher_uri"
             tal:condition="context/publisher_uri"
             tal:content="string:${context/publisher}:">Publisher</a>
          <span tal:condition="not:context/publisher_uri"
             tal:content="string:${context/publisher}:">Publisher</span>
        </span>
        <span tal:condition="context/extent">
          <span tal:content="context/extent" />
        </span>
    </div>
    <div class="PublicationAccessLinks" tal:condition="python:getattr(context, 'access_uri', None) or getattr(context, 'alternate_uri', None)">
      <span class="label">read:</span>
      <a class="AccessButton button" tal:condition="context/access_uri|nothing" tal:attributes="href context/access_uri"
         tal:content="python:view.url_domain(context.access_uri)">jstor.org</a>
      <a class="AccessButton button" tal:condition="context/alternate_uri|nothing" tal:attributes="href context/alternate_uri"
         tal:content="python:view.url_domain(context.alternate_uri)">jstor.org</a>
    </div>
    <div class="PublicationBibliographicLinks" tal:condition="context/bibliographic_uri|nothing">
      <span class="label">bibliographic record:</span>
      <a class="AccessButton button" tal:attributes="href context/bibliographic_uri"
         tal:content="python:view.url_domain(context.bibliographic_uri)">jstor.org</a>
    </div>
    </tal:defines>
    <div class="PublicationText" style="padding-top: 55px;clear: both;"
         tal:condition="context/text|nothing"
         tal:content="structure context/text/raw">
         Text
    </div>
  </metal:core>
</body>
</html>
