<span tal:attributes="class options/class; style string:display: block;; width:${options/width}px;;;">
  <span><a tal:omit-tag="options/isfullsize" rel="lightbox"
          tal:attributes="href options/url_path;"
          tal:content="structure options/tag">[image goes here]</a></span>
  <span class="image-caption"
        tal:condition="options/caption|nothing"
        tal:attributes="style string:display: block;; width:${options/width}px;;;"
        tal:content="options/caption|nothing">Caption</span>
</span>
